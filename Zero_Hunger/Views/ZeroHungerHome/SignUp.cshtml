@{
    ViewBag.Title = "Sign Up - Zero Hunger";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include the Bootstrap CSS file -->

    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .container02 {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #cce5ff; /* White container background */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #343a40; /* Dark gray heading color */
        }

        form {
            margin-top: 20px;
        }

        input[type="email"],
        input[type="tel"],
        input[type="password"],
        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ced4da; /* Light gray input border */
            border-radius: 4px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #28a745; /* Green button background */
            color: #fff; /* White button text */
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .note {
            color: #6c757d; /* Gray text color */
            font-size: 14px;
            margin-top: 10px;
        }

        b {
            display: block;
            margin-top: 20px;
            text-align: center;
        }

        a {
            color: #007bff; /* Blue link color */
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container02">
        <h2>Sign Up</h2>
        <form method="post">
            <div class="form-group">
                <input name="Email" type="email" class="form-control" placeholder="Email">
                <span class="text-danger"><b>@Html.ValidationMessage("Email")</b></span>
            </div>
            <div class="form-group">
                <input name="Phone" type="tel" class="form-control" placeholder="Phone">
                <span class="text-danger"><b>@Html.ValidationMessage("Phone")</b></span>
            </div>
            <div class="form-group">
                <input name="pass" type="password" class="form-control" placeholder="Password">
                <span class="text-danger"><b>@Html.ValidationMessage("pass")</b></span>
            </div>
            <div class="form-group">
                <input name="RestaurantName" type="text" class="form-control" placeholder="Restaurant Name">
                <span class="text-danger"><b>@Html.ValidationMessage("RestaurantName")</b></span>
            </div>
            <div class="form-group">
                <textarea name="Address" class="form-control" placeholder="Address" rows="4"></textarea>
                <span class="text-danger"><b>@Html.ValidationMessage("Address")</b></span>
            </div>
            <div class="form-group">
                <input name="OwnerName" type="text" class="form-control" placeholder="Owner Name">
                <span class="text-danger"><b>@Html.ValidationMessage("OwnerName")</b></span>
            </div>
            <div class="form-group">
                <input type="radio" name="AcType" value="101" style="display:none;" checked>
            </div>
            <button type="submit" class="btn btn-success">Sign Up</button>
        </form>
        <p class="note">By signing up, you agree to our Terms and Privacy Policy.</p>
        <b>@Html.ActionLink("Have an Account? Log In", "LogIn")</b>
    </div>

    <!-- Include the Bootstrap JS and Popper.js files -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
