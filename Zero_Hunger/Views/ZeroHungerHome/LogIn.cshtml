@{
    ViewBag.Title = "Welcome - Zero Hunger";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome - Zero Hunger</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include the Bootstrap CSS file -->

    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .container01 {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #cce5ff; /* White container background */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #343a40; /* Dark gray heading color */
        }

        form {
            margin-top: 20px;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ced4da; /* Light gray input border */
            border-radius: 4px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #28a745; /* Green button background */
            color: #fff; /* White button text */
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        b {
            display: block;
            margin-top: 20px;
            text-align: center;
        }

        a {
            color: #007bff; /* Blue link color */
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container01">
        <h2>Zero Hunger</h2>
        <form method="post">
            <div class="form-group">
                <input name="Email" type="text" class="form-control" placeholder="Email">
                <span class="text-danger">@Html.ValidationMessage("Email")</span>
            </div>
            <div class="form-group">
                <input name="pass" type="password" class="form-control" placeholder="Password">
                <span class="text-danger">@Html.ValidationMessage("pass")</span>
            </div>
            <button type="submit" class="btn btn-success">Login</button>
        </form>
        <p class="mt-3"><b>@Html.ActionLink("Don't Have Account? Create New", "SignUp")</b></p>
    </div>

    <!-- Include the Bootstrap JS and Popper.js files -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
